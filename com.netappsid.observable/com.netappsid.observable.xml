<project name="com.netappsid.test.tools platform" default="load">
	<target name="clear platform">
		<delete dir="plugins" />
		<mkdir dir="plugins" />
	</target>
	<target name="load" depends="clear platform">
		<osgi.release name="osgirepository" dir="plugins">
			<plugin symbolicname="org.apache.log4j" version="1.2.13" />
			<plugin symbolicname="javax.activation" version="1.1.0" />
			<plugin symbolicname="javax.transaction" version="1.1.1" />
			<plugin symbolicname="com.netappsid.validate" version="1.1.0" />
			<plugin symbolicname="com.google.guava" version="8.0.0" />
			<plugin symbolicname="com.netappsid.com.jgoodies.binding" version="2.0.6" />
		</osgi.release>
	</target>
</project>
