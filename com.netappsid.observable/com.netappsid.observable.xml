<project name="com.netappsid.test.tools platform" default="load">
	<target name="clear platform">
		<delete dir="plugins" />
		<mkdir dir="plugins" />
	</target>
	<target name="load" depends="clear platform">
		<osgi.release name="osgirepository" dir="plugins">
			<plugin symbolicname="org.apache.log4j" version="1.2.13" />
			<plugin symbolicname="javax.activation" version="1.1.0" />
			<plugin symbolicname="javax.transaction" version="1.1.1" />
			<plugin symbolicname="com.netappsid.validate" version="1.1.0" />
			<plugin symbolicname="com.google.guava" version="8.0.0" />
			<plugin symbolicname="com.netappsid.com.jgoodies.binding" version="2.0.6" />

			<plugin symbolicname="ca.reivax.javablocks" version="0.10.0" />
			<plugin symbolicname="com.netappsid.test.tools" version="1.6.0" />
			<plugin symbolicname="com.springsource.net.sf.cglib" version="2.1.3" />
			<plugin symbolicname="org.azeckoski.reflectutils" version="0.9.14" />
			<plugin symbolicname="org.mockito.mockito-core-eclipse" version="1.8.5" />
			<plugin symbolicname="org.hamcrest.core" version="1.1.0" />
			<plugin symbolicname="org.junit" version="4.8.1" />
			<plugin symbolicname="org.apache.derby.core" version="10.5.3" />
		</osgi.release>
	</target>
</project>
